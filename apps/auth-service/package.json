{
  "name": "@multivendor-eshop/auth-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@multivendor-eshop/auth-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@multivendor-eshop/auth-service:build:development"
          },
          "production": {
            "buildTarget": "@multivendor-eshop/auth-service:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/auth-service/Dockerfile . -t multivendor-eshop-auth-service"
      }
    }
  }
}
